<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="10dp"
  android:paddingStart="50dp"
  android:paddingEnd="50dp"
  android:gravity="center_vertical">

  <ImageView
    android:id="@+id/die0View"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/die1View"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:srcCompat="@drawable/white_3"
    />

  <ImageView
    android:id="@+id/die1View"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:layout_constraintLeft_toRightOf="@+id/die0View"
    app:layout_constraintRight_toLeftOf="@+id/rollView"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:srcCompat="@drawable/white_4"
    />

  <TextView
    android:id="@+id/rollView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_margin="5dp"
    android:textSize="20sp"
    app:layout_constraintLeft_toRightOf="@+id/die1View"
    app:layout_constraintRight_toLeftOf="@+id/resultView"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />
  <TextView
    android:id="@+id/resultView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textAlignment="textEnd"
    app:layout_constraintLeft_toRightOf="@+id/rollView"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>